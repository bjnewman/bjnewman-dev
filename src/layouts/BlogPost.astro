---
import Base from './Base.astro';

interface Props {
  title: string;
  date: string;
  description?: string;
}

const { title, date, description } = Astro.props.frontmatter || Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Base title={title} description={description}>
  <article class="blog-post">
    <a href="/blog" class="back-link">&larr; Back to Blog</a>

    <header class="blog-post-header">
      <h1>{title}</h1>
      <time datetime={date}>{formattedDate}</time>
    </header>

    <div class="blog-post-content">
      <slot />
    </div>
  </article>
</Base>

<style>
  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
  }

  .back-link:hover {
    text-decoration: underline;
  }

  .blog-post-header {
    margin-bottom: 2rem;
  }

  .blog-post-header h1 {
    margin: 0 0 0.5rem 0;
    font-size: 2.5rem;
    line-height: 1.2;
  }

  .blog-post-header time {
    color: var(--text-secondary);
    font-size: 0.95rem;
  }

  .blog-post-content {
    line-height: 1.8;
  }

  .blog-post-content :global(h2) {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .blog-post-content :global(h3) {
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .blog-post-content :global(pre) {
    margin: 1.5rem 0;
    padding: 1rem;
    border-radius: 8px;
    overflow-x: auto;
  }

  .blog-post-content :global(code) {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.9em;
  }

  .blog-post-content :global(ul),
  .blog-post-content :global(ol) {
    margin: 1rem 0;
    padding-left: 1.5rem;
  }

  .blog-post-content :global(li) {
    margin: 0.5rem 0;
  }

  .blog-post-content :global(blockquote) {
    margin: 1.5rem 0;
    padding: 1rem 1.5rem;
    border-left: 4px solid var(--primary);
    background: var(--bg-secondary);
    border-radius: 0 8px 8px 0;
  }

  .blog-post-content :global(a) {
    color: var(--primary);
  }
</style>
